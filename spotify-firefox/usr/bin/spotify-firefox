#
# Directory custom profile
#
mkdir -p "$HOME/.spotify/chrome"
DIR="$HOME/.spotify"

#
# Check if Mozilla Firefox is installed
#
if [ ! "$(command -v firefox)" ]; then
    echo "firefox command not found"
    exit
fi


#
# Custom profile
#
echo \
"#nav-bar {
    display: none !important;
}
#TabsToolbar {
    display: none !important;
}" \
>> "$DIR"/chrome/userChrome.css


if [ ! -e "$DIR/prefs.js" ]; then
    echo 'user_pref("media.eme.enabled", true);' > "$DIR"/prefs.js
fi

echo \
"user_pref(\"browser.tabs.warnOnClose\", false);" \
>> "$DIR"/user.js

sed -i 's|user_pref("browser.urlbar.placeholderName.*||g' "$DIR"/prefs.js


firefox --class=firefoxspotifycom -profile "$DIR" -no-remote -new-instance "https://open.spotify.com/browse/featured" &


count=0
while [  $count -lt 100 ]; do
    if [ "$(xwininfo -root -children -all | grep -iE "Navigator.*firefoxspotifycom")" != "" ]; then
        /usr/share/spotify-firefox/xseticon -id "$(xwininfo -root -children -all | grep -iE "Navigator.*firefoxspotifycom" | awk '{print $1}')" /usr/share/icons/hicolor/64x64/apps/spotify.png
        count=100
    else
        let count=count+1;
    fi
    sleep 0.5
done
